{
    "comments": "Example configuration showing different authentication methods",
    "global_excludes": [
        ".DS_Store",
        "*.log",
        "__pycache__",
        ".git"
    ],
    "bindings": {
        "frontend-agent": {
            "comments": "SFTP using SSH agent (recommended - no credentials in config)",
            "protocol": "sftp",
            "hostname": "example.com",
            "port": 22,
            "username": "user",
            "max_workers": 10,
            "local_basepath": "/Users/gustavo/dev/project",
            "remote_basepath": "/var/www/html",
            "excludes": [
                "node_modules",
                "*.tmp"
            ]
        },
        "frontend-password": {
            "comments": "SFTP using password authentication",
            "protocol": "sftp",
            "hostname": "example.com",
            "port": 22,
            "username": "user",
            "password": "ssh-password",
            "local_basepath": "/Users/gustavo/dev/project",
            "remote_basepath": "/var/www/html"
        },
        "frontend-key-unencrypted": {
            "comments": "SFTP using unencrypted SSH key",
            "protocol": "sftp",
            "hostname": "example.com",
            "port": 22,
            "username": "user",
            "key_filename": "~/.ssh/id_rsa",
            "local_basepath": "/Users/gustavo/dev/project",
            "remote_basepath": "/var/www/html"
        },
        "frontend-key-encrypted": {
            "comments": "SFTP using encrypted SSH key with passphrase",
            "protocol": "sftp",
            "hostname": "example.com",
            "port": 22,
            "username": "user",
            "key_filename": "~/.ssh/id_rsa_encrypted",
            "password": "key-passphrase",
            "local_basepath": "/Users/gustavo/dev/project",
            "remote_basepath": "/var/www/html"
        },
        "admin": {
            "comments": "FTP with password authentication. Note: max_workers=1 is conservative for FTP servers that may limit concurrent connections",
            "protocol": "ftp",
            "hostname": "ftp.example.com",
            "port": 21,
            "username": "admin",
            "password": "secretpassword",
            "max_workers": 1,
            "local_basepath": "/Users/gustavo/dev/project/admin",
            "remote_basepath": "/public_html/admin"
        }
    }
}